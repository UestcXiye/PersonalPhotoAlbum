/* pages/home/imgshow4/imgshow4.wxss */
.imglist{
  text-align: center;
}
.imglist .imgicon{
  width: 200px;
  height: 200px;
  margin: 20px;
}
/*在小程序里，所有的手机屏幕的宽度都为 750rpx，我们可以把图片等比缩小*/
.imglist .imgitem{
  width: 700rpx;
  height: 415rpx;
  margin: 20rpx;
  border-radius: 8px;
  box-shadow: 5px 8px 30px rgba(53,178,225,0.26);
}
/*图片全屏显示，但高度预留很小，这里需要裁剪图片*/
.imglist .imgfull{
  width: 100%;
  height: 100px;
}
/*图片的边款美化：圆角*/
.imglist .img{
  border-radius: 8px;
  box-shadow: 5px 8px 30px rgba(53,178,225,0.26);
}
/*把图片做成圆形*/
.imglist .circle{
  width: 200px;
  height: 200px;
  border-radius: 100%;
}